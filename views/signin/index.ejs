<% if (messages.error) { %> <%= messages.error %> <% } %>
<div class="wrapper">
  <div id="signin-box">
    <div id="signin-title">Sign In</div>
    <form id="signin-form" action="/signin" method="post">
      <div class="input-container">
        <input
          type="email"
          placeholder="Your Email Address"
          id="userEmail"
          name="email"
          required
        />
      </div>

      <div class="input-container">
        <input
          type="password"
          placeholder="Your Password"
          id="userPassWord"
          name="password"
          required
        />
      </div>
      <div class="password-help-container">
        <div class="showpassword-container">
          <input type="checkbox" onclick="showPassWord()" />Show Password
        </div>
        <div class="forgotpassword-container">
          <a href="/signin/forgotpassword">Forgot Password?</a>
        </div>
      </div>
      <div style="text-align: center">
        <button class="btn btn-signin" type="submit">Sign in</button>
      </div>
      <div class="bottom-section">
        <div class="new-customer">New Customer?</div>
        <div class="create-account">
          <a href="/signup">Create Account</a>
        </div>
      </div>
    </form>
  </div>
</div>
